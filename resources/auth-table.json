{
  "Resources": {
    "authTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "${self:custom.tableName}",
        "BillingMode": "PAY_PER_REQUEST",
        "AttributeDefinitions": [
          {
            "AttributeName": "email",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "email",
            "KeyType": "HASH"
          }
        ]
      }
    }
  }
}
